<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Define your beans here -->

    <!-- Logger Bean -->
    <bean id="logger" class="pl.bartek.spring.LoggerConfig">
        <property name="printedLoggerLevel" value="FINE"/>
        <property name="rootLoggerLevel" value="FINE"/>
    </bean>

    <bean id="myFortune" class="pl.bartek.spring.fortune.HappyFortuneService"/>


    <bean id="setterCoach"
          class="pl.bartek.spring.coaches.SetterCoach">
        <property name="fortune" ref="myFortune"/>
    </bean>

    <bean id="coach" class="pl.bartek.spring.coaches.TrackCoach" >

        <!-- constructor injection -->
        <constructor-arg ref="myFortune"/>
    </bean>

</beans>





